<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.awesomeplaylists"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.awesomeplaylists.Activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.awesomeplaylists.Activities.PlayItActivity"
            android:label="@string/title_activity_play_it" >
        </activity>
        <activity
            android:name="com.example.awesomeplaylists.Activities.UserSettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.example.awesomeplaylists.Activities.AddEditPlaylistActivity"
            android:label="@string/title_activity_add_edit_playlist" >
        </activity>
        <activity
            android:name="com.example.awesomeplaylists.Activities.LibraryActivity"
            android:label="@string/library_title"
            android:parentActivityName="android.app.ListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.app.ListActivity" />
        </activity>
        <activity
            android:name="com.example.awesomeplaylists.Activities.PlaylistsActivity"
            android:label="@string/playlists_title"
            android:parentActivityName="android.app.ListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.app.ListActivity" />
        </activity>
    </application>

</manifest>
